{
  "compilerOptions": {
    "incremental": true,
    "target": "ES2022",
    "lib": ["ES2023"],
    "module": "NodeNext",
    "skipLibCheck": true,
    "outDir": "dist",
    "moduleResolution": "nodenext",
    "baseUrl": ".",
    "paths": {
      "vite": ["node_modules/vite"],
      "@vitejs/plugin-react": ["node_modules/@vitejs/plugin-react"],
      "@tailwindcss/vite": ["node_modules/@tailwindcss/vite"]
    },
    "isolatedModules": true,
    "moduleDetection": "force",
    "noEmit": false,  // Allow emitting compiled files
    "strict": true,
    "noUnusedLocals": true,
    "noUnusedParameters": true,
    "noFallthroughCasesInSwitch": true
  },
  "include": ["vite.config.ts", "electron-main.ts"]
}
